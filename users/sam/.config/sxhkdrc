# Reload sxhkd config
shift + ctrl + alt + super + F23
    /usr/bin/pkill -USR1 --exact sxhkd; notify-send 'sxhkd' 'Reloaded config'

# Launch programs
super + space
    ~/.config/rofi/scripts/launcher_t1

super + Return
    /usr/bin/ghostty

#shift + ctrl + alt + v
#    ghostty --title vm_launcher --command ~/.scripts/vm_launch

# Media player controls
XF86AudioPlay
    /usr/bin/playerctl --player=spotify,brave play-pause 2>/dev/null

XF86AudioNext
    /usr/bin/playerctl --player=spotify,brave next 2>/dev/null

XF86AudioPrev
    /usr/bin/playerctl --player=spotify,brave previous 2>/dev/null

XF86AudioForward
    /usr/bin/playerctl --player=spotify,brave position 2+ 2>/dev/null

XF86AudioRewind
    /usr/bin/playerctl --player=spotify,brave position 2- 2>/dev/null

shift + XF86AudioPlay
    /usr/bin/playerctl --player=spotify,brave shuffle Toggle 2>/dev/null

# Screenshots (also saves to file due to saveAfterCopy=true in flameshot.ini)
Print
    ~/.scripts/screenshot select 2>/dev/null

shift + Print
    ~/.scripts/screenshot region 2>/dev/null

shift + ctrl + Print
    ~/.scripts/screenshot monitor 0 2>/dev/null

shift + alt + Print
    ~/.scripts/screenshot monitor 1 2>/dev/null

shift + ctrl + alt + Print
    ~/.scripts/screenshot all-monitors 2>/dev/null
